<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dwhite"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/backbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">
<!--            <ImageView-->
<!--                android:layout_width="19dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_gravity="left"-->
<!--                android:layout_marginLeft="7dp"-->
<!--                android:layout_marginRight="7dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:gravity="left"-->
<!--                android:src="@drawable/back_white" />-->

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/seguisb"
                android:gravity="center_vertical"
                android:text="@string/title_detailchargeable"
                android:textColor="@color/dwhite"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageVar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
             />
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageVar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="#3a3a3a"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:textSize="22sp"
            android:fontFamily="@font/seguisb"
            android:text="Pembayaran Berhasil" />
        <TextView
            android:id="@+id/suces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageVar"
            android:layout_centerHorizontal="true"
            android:textColor="#3a3a3a"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/seguisb"
            android:text=""
            android:layout_marginBottom="40dp"/>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/token"/>


        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:gravity="center"
            android:fontFamily="@font/seguisb"
            android:textSize="15sp"
            android:elevation="2dp"
            android:background="@drawable/bgwhite_cornerblack"
            android:text="Back"
            android:textColor="#D32F2F" />
    </LinearLayout>
</LinearLayout>
