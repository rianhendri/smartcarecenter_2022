<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/dwhite"
	android:paddingLeft="12dp"
	android:paddingRight="12dp"
	android:paddingBottom="7dp"
	android:paddingTop="7dp"

	android:id="@+id/bghriini"


	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<LinearLayout
			android:gravity="center"
			android:background="@drawable/bgfotow"
			android:layout_width="65dp"
			android:layout_height="65dp"
			android:layout_marginRight="8dp"
			>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="50dp"
				android:layout_height="50dp">


				<ImageView
					android:id="@+id/foto"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_chat2"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent" />


			</androidx.constraintlayout.widget.ConstraintLayout>

		</LinearLayout>
		<LinearLayout
			android:id="@+id/layoutnya"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/stnya"
						android:layout_width="205dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeuib"
						android:text="Chat Support or.Bima/ Ortindo 1"
						android:textSize="13sp"
						android:layout_weight="0"
						android:textColor="@color/black"
						/>
					<TextView
						android:id="@+id/datechatlist"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text=" "
						android:textSize="10sp"
						android:gravity="end"
						android:layout_weight="1"
						android:textColor="@color/colorPrimaryDark"
						/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/detailchat"
						android:gravity="center_vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:fontFamily="@font/segoeui"
						android:text=" "
						android:textSize="12sp"
						android:ellipsize="end"
						android:maxLines="1"
						android:layout_weight="1"
						android:paddingRight="24dp"
						android:textColor="@color/black"
						/>
					<LinearLayout

						android:id="@+id/dot"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_margin="2dp"
						android:background="@drawable/notification_red_dot2"
						android:orientation="vertical"
						android:visibility="gone"
						app:layout_constraintEnd_toEndOf="parent">
						<TextView

							android:id="@+id/newnotif"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:fontFamily="@font/seguisb"
							android:gravity="center"
							android:text="99"
							android:textColor="@color/dwhite"
							android:textSize="9dp"
							android:visibility="gone"
							tools:layout_editor_absoluteX="35dp"
							tools:layout_editor_absoluteY="8dp" />
					</LinearLayout>
				</LinearLayout>


			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
</LinearLayout>
