<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:orientation="horizontal"
		android:padding="0dp"
		android:paddingLeft="0dp"
		android:paddingRight="0dp" >

		<androidx.cardview.widget.CardView
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="14dp"
			android:layout_marginTop="5dp"
			app:cardCornerRadius="7dp"
			app:cardElevation="0dp" >

			<ImageView
				android:id="@+id/xpic"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:layout_marginBottom="0dp"
				android:scaleType="centerCrop"
				android:src="@mipmap/ic_launcher" />
		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:weightSum="2" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:orientation="vertical" >



				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >
					<LinearLayout
						android:layout_width="12dp"
						android:layout_height="match_parent"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/dot"
							android:layout_width="12dp"
							android:layout_height="match_parent"
							android:src="@drawable/notification_red_dot" />
					</LinearLayout>

					<TextView

						android:id="@+id/presstypedaily"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:ellipsize="end"
						android:maxLines="1"
						android:paddingRight="8dp"
						android:text="Lorem Ipasdasdadsum Aasdaasdmet dfgdfgdfgfdgdfgdgdgDolor Ametasdasdasdasdasdsadasdasd"
						android:textColor="@color/black"
						android:layout_weight="1"
						android:textSize="14sp" />

					<TextView
						android:id="@+id/datedaily"
						android:layout_width="95dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="2021-12-31 12:30"
						android:textColor="@color/black"
						android:textSize="11sp" />

				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >

					<LinearLayout
						android:layout_width="12dp"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					</LinearLayout>

					<TextView
						android:id="@+id/customername"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:fontFamily="@font/seguisb"
						android:text="asdasdasdasdasd"
						android:textSize="11sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"

					android:gravity="center_vertical"
					android:orientation="horizontal" >

					<LinearLayout
						android:layout_width="12dp"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					</LinearLayout>
					<TextView
						android:id="@+id/caseprog"
						android:layout_width="70dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:text="Case Progress"

						android:textColor="@color/black"
						android:textSize="11sp" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:text=" : "
						android:textColor="@color/black"
						android:textSize="11sp" />
					<TextView
						android:id="@+id/caseprogressdaily"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="2dp"
						android:layout_weight="1"
						android:textAllCaps="true"
						android:textColor="@color/black"
						android:fontFamily="@font/segoeuib"
						android:textSize="11sp" />



					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>
				<LinearLayout
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >


					<TextView

						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="S/N: "
						android:textColor="@color/black"
						android:textSize="11sp" />

					<TextView
						android:id="@+id/sndaily"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="2dp"
						android:fontFamily="@font/segoeui"
						android:textSize="11sp" />



					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>
				<LinearLayout
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >


					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:fontFamily="@font/segoeui"
						android:text="Issue:"
						android:textColor="@color/black"
						android:textSize="11sp" />

					<TextView
						android:id="@+id/by"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="2dp"
						android:text="asdasd asd asd asd asdasdasd as das dasdas das das das das dasd asd asd asd asd "
						android:fontFamily="@font/segoeui"
						android:textSize="11sp" />



					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >
					<LinearLayout
						android:layout_width="12dp"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					</LinearLayout>

					<TextView
						android:id="@+id/pressta"
						android:layout_width="70dp"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:text="Press Status "
						android:textColor="@color/black"
						android:textSize="11sp" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:text=" : "
						android:textColor="@color/black"
						android:textSize="11sp" />


					<TextView
						android:id="@+id/pressstatusdaily"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="2dp"
						android:textColor="@color/black"
						android:textAllCaps="true"
						android:fontFamily="@font/segoeuib"
						android:text="asdasdasdasdasd"
						android:textSize="11sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="12dp"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					</LinearLayout>

					<TextView
						android:id="@+id/sttitledaily"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/seguisb"
						android:text="asdasdasdasdasd"
						android:textColor="@color/black"
						android:textSize="11sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:visibility="gone"
		android:id="@+id/textcntn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:fontFamily="@font/segoeui"
		android:textSize="12sp"
		android:textColor="@color/colorPrimaryDark"
		android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:background="@color/softgrey" />

</LinearLayout>
