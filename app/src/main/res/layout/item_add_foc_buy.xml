<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/nolistpo"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoeuib"
                android:paddingTop="4dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namabarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:fontFamily="@font/seguisb"
                    android:text="asldkaskjdhaksjdhksad"
                    android:maxLength="150"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/xpic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/dwhite"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_no_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="900">

                            <TextView
                                android:id="@+id/codebarang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/segoeuib"
                                android:text="QASDASD"

                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="top"
                                android:orientation="horizontal"
                                android:weightSum="2">


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="@string/title_category"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/categorypolist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="-"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="Unit: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/unitname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="-"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="@string/title_startimpesi"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/previmpres"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeuib"
                                    android:text="-"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/deletelistpo"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_trash"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/matrixlabel"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:gravity="center"
                                android:text="Matrix: "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:gravity="center"
                                android:text="@string/title_qty"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/matrixvalue"
                                android:layout_width="135dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/seguisb"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <ImageView
                                android:id="@+id/minus"
                                android:padding="5dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_minus" />

                            <TextView
                                android:id="@+id/qtyitempo"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/background_transparent"
                                android:fontFamily="@font/segoeuib"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="9990"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <ImageView
                                android:padding="5dp"
                                android:id="@+id/plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_plus" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:fontFamily="@font/seguisb"-->
                    <!--                        android:text="@string/title_subtotal"-->
                    <!--                        android:textColor="@color/black"-->
                    <!--                        android:textSize="12sp" />-->

                    <TextView
                        android:id="@+id/subtotalpolist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/segoeui"
                        android:gravity="right"
                        android:text="Rp.0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="14dp"
        android:background="@color/darkwhite" />

</LinearLayout>
