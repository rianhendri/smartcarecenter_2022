<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:orientation="horizontal"
		android:padding="0dp"
		android:paddingLeft="0dp"
		android:paddingRight="0dp" >

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="14dp"
			android:layout_marginTop="5dp"
			app:cardCornerRadius="7dp"
			app:cardElevation="0dp" >

			<ImageView
				android:id="@+id/xpic"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:layout_marginBottom="0dp"
				android:scaleType="centerCrop"
				android:src="@mipmap/ic_launcher" />
		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:weightSum="2" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/tetleform"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="@font/seguisb"
					android:maxLength="30"
					android:text="Lorem Ipsum Amet Dolor Ametasdasdasdasdasdsadasdasd"
					android:textColor="@color/black"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/dateform"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="@font/segoeui"
					android:text="12 Juni 2020"
					android:textColor="@color/softgrey"
					android:textSize="12sp" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal" >


					<TextView
						android:id="@+id/status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Status:"
						android:textColor="@color/black"
						android:textSize="11sp" />

					<TextView
						android:id="@+id/donestatus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:fontFamily="@font/segoeui"
						android:textSize="11sp" />



					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="Ticket Status:"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:visibility="gone" >


					<TextView
						android:id="@+id/noform"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/segoeui"
						android:text="SC12983GR"
						android:textColor="@color/black"
						android:textSize="11sp"
						android:visibility="gone" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:background="@color/softgrey" />

</LinearLayout>
