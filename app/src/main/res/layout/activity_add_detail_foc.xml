<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dwhite"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="19dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/title_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="64dp"
            android:fontFamily="@font/seguisb"
            android:gravity="center_vertical"
            android:text="@string/title_additemfoc"
            android:textColor="@color/dwhite"
            android:textSize="15sp" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="54dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="14dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="@string/title_norder"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/noorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"

                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="@string/title_date"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/datefoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="@string/title_bracnh"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/branchspin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text="Lorem Ipsum"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/locationsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text="Jakarta"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="Operator"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/operator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="Press S/N"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="@string/title_startimpesi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/startimpresi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="4dp"
                android:text="@string/title_endimpresi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/lastimprsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="4dp"
                android:background="@drawable/background_transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/softgrey" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnadditem_po"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="12sp"
                android:paddingRight="12sp"
                android:paddingTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/softgrey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="@string/additemlist"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end" >

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/segoeui"
                        android:gravity="end"
                        android:src="@drawable/ic_pluswhite" />
                </LinearLayout>
            </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listitemfoc"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/addform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="50dp"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagevisible"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_yellow_borderradius"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:padding="14dp"
                android:text="@string/title_submit"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
